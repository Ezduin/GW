{{#if notes}}

<div class="col-md-5 float-left">
  <div class="card">
    <div class="card-header">
      <h3 class="card-tittle">AÃ±adir Producto</h3>
    </div>
    <div class="card-body">
      <form action="/notes/add" method="POST">
        <div class="form-group">
          <input type="text" name="title" placeholder="Nombre del producto" autofocus>
        </div>
        <div class="form-group">
            <textarea name="description" class="form-control" placeholder="descripcion" ></textarea>
        </div>
        <div class="form-group">
          <input type="number" name="price" placeholder="Precio del producto">
        </div>
         <div class="form-group">
          <input type="number" name="quantity" placeholder="Cantidad del producto">
        </div>
        <div class="form-group">
            <button class="btn btn-primary btn-block" type="submit">Guardar</button>
        </div>
      </form>
    </div>
  </div>
</div>
<div class="col-md-7 float-right">
<table class="table table-warning table-bordered table-hover">
    <thead>
        <tr class="text-center">
            <th>Nombre producto</th>
            <th>Descripcion</th>
            <th>Precio</th>
            <th>Cantidad</th>
            <th>Editar</th>
            <th>Eliminar</th>   
        </tr>
    </thead>
    <tbody


        {{#each notes}}
        

        <tr class="text-center">
            <th> {{title}}</th>
            <th> {{description}}</th>
            <th> {{price}}</th>
            <th> {{quantity}} </th>
            <th><a href="/notes/edit/{{_id}}" widt="" ><i class="fas fa-edit" style="font-size: 25px"></i></a></th>
        
            <form action="/notes/delete/{{_id}}?_method=DELETE" method="POST">
            <input type="hidden" name="_method" value="DELETE">
             <th><button type="submit" class="btn btn-danger btn-block btn-sm" >Borrar</th> 
                
            </button>
            </form>
               </tr>
               {{/each}}
 </tbody>
</table>
</div>
    
  
    {{else}}
    <div class="row">
        <div class="card mx-auto">
          <div class="card-body">
            <h1>Hola {{user.name}}</h1>
            <p>Aun no hay inventario creado</p>
            <a href="/notes/add" class="btn btn-warning btn-block ">Crear una
            </a>
          </div>
        </div>
    </div>
    
   {{/if}}
  

