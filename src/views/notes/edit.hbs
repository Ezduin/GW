<div class="col-md-4 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>Editar producto</h3>
        </div>
        <div class="card-body">
            <form action="/notes/edit/{{note._id}}?_method=PUT" method="POST">
                <input type="hidden" name="_method" value="PUT">
                <div class="form-group">
                    <input type="text" class="form-control" name="title" placeholder="Editar" value="{{note.title}}">
                </div>
                <div class="form-group">
                    <textarea name="description" class="form-control">{{note.description}}
                    </textarea>
                </div>
                <div class="form-group">
                    <input type="number" class="form-control" name="price" placeholder="Precio" value="{{note.price}}">
                </div>
                <div class="form-group">
                    <input type="number" class="form-control" name="quantity" placeholder="cantidad del producto" value="{{note.quantity}}">
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-success btn-block">Actualizar</button>
                </div>
            </form>
        </div>
    </div>
</div>